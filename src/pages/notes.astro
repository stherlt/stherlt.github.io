
---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
const allPosts = await Astro.glob('../pages/notes/*.md');
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} >
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&family=Rubik+Mono+One&display=swap" rel="stylesheet">

    <title>| NOTES</title> <!Tab title>
    <script defer src="/src/app/appscroll.js"></script>
    <Navigation/>
  </head>
  <body class="animatein">
  
<h1 class="fancy">| NOTES</h1>
<p class="skinny">notes on various topics</p>

<hr class="divider">

</section>
<div class="blogPostCont">
  {allPosts.map((post) => (
    <section class="project s4">
      <div>
        <p class="misc">Tags: {post.frontmatter.tags} | Updated on: {post.frontmatter.pubDate}</p>
        <h2 class="fancy">{post.frontmatter.title}</h2>
        <p class="skinny">{post.frontmatter.description}</p>
        
        
        <a class="LINKBOX" href={post.url}>ENTER</a>
      </div>
      
    </section>
  ))}
</div>






<hr class="divider">
  <Footer/>
  </body>
  
</html>

<style>

.blogPostCont{
  
  background-color: #ececec00;
  border-radius: 10px;
  padding: 1%;
  
}
@media (min-width: 900px) {
  .blogPostCont {
    display: grid;
    align-content: left;
    grid-template-columns: repeat(2, 50%);
    gap: 10px;
   
  }
  }


.misc{
  opacity: 0;
  font-size: 0.6rem;
  color: #000000b9;
  text-align: right; 
 
  
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.s4:hover .misc{
  opacity: 1;
  text-shadow:  0px 0px 2px rgba(11, 11, 11, 0.452); /* Subtle shadow */
} 


.BACKGROUNDTEXT{
  

  position: absolute;
  color: transparent;
  color: rgb(0, 0, 0);
  z-index: -1;
  font-size: 300%;
  padding-left: 60%;
  transform: translateY(-250px);
  font-family: "Lexend Deca", sans-serif;
  font-optical-sizing: auto;
  font-weight: 780;
  font-style: normal;
}
.BACKGROUNDTEXTABT{
  

  position: absolute;
  color: transparent;
  color: rgb(0, 0, 0);
  z-index: -1;
  font-size: 100%;

  font-family: "Lexend Deca", sans-serif;
  font-optical-sizing: auto;
  font-weight: 780;
  font-style: normal;
}
.LINKBOX {
  font-family: "Lexend Deca", serif;
  font-optical-sizing: auto;
  font-weight: 350;
  display: inline-block;
  padding: 10px 20px;
  font-size: 16px;
  text-align: center;
  text-decoration: none;
  border-style: solid;
  color:rgb(0, 0, 0);
  background-color: rgba(0, 0, 0, 0); /* Button background color */
  border-color: #000000;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.5s ease, border-style 0.3s ease-in; /* Smooth transition for hover effect */
  box-shadow: -3px 3px 10px rgba(0, 0, 0, 0.068); /* Subtle shadow */
}

/* Glow effect on hover */
.LINKBOX:hover {
 
  border-radius: 2px;
  
  box-shadow: -3px 3px 16px rgba(0, 0, 0, 0.253); /* Subtle shadow */
  font-weight: 350;

  background-color: rgba(255, 255, 255, 0.377);
  transform: scale(1.02); /* Slight zoom-in effect */

  
}
.skinny{
  
}
@keyframes welcomepulse {
  0% {
    
    box-shadow:inset 10px 0px 15px rgba(82, 82, 82, 0.6); /* Right */
  }
  25% {
    box-shadow:inset 0px 10px 15px rgba(82, 82, 82, 0.6); /* Bottom */
  }
  50% {
    box-shadow:inset -10px 0px 15px rgba(82, 82, 82, 0.6); /* Left */
  }
  75% {
    box-shadow:inset 0px -10px 15px rgba(82, 82, 82, 0.6); /* Top */
  }
  100% {
    box-shadow:inset 10px 0px 15px rgba(82, 82, 82, 0.6); /* Back to Right */
  }}
  .s4 img {
    margin-left: 40%;
    
    
    transition: box-shadow 0.3s ease, border-radius 0.3s ease;
    width: 550px; /* Adjust the image width as needed */
    height: auto; /* Maintain the aspect ratio of the image */
}
.s4{

  margin-top: 4%;
 
  border-left: solid;
  border-bottom: solid;
  border-top: solid;
  border-right: solid;
  
  border-color: #000000 ;
  box-shadow:  10px 10px 0px rgba(0, 0, 0, 0.993);
  background-color: #d6d6d600;
  padding: 5%;
  border-radius:  1px;
  border-width: 2px;
  transition: all 0.3s ease;
}
.s4:hover{
  box-shadow:  13px 13px 0px rgba(0, 0, 0, 0.993);
  transform: translateX(0%);
  background-color: rgba(135, 151, 153, 0.274);
}

@media (max-width: 480px) {
  .project {
    flex-direction: column;
    align-items: left;
    text-align: left;
  }
  .img{
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.26); /* Subtle shadow */
    margin-top: 10%;
    margin-bottom: 10%;
    border-style:solid;
    border-width: 2.5px;
    border-radius: 10px;
    border-color: #d6d6d6;
    width: 100%; /* Adjusts image width to fit the container */
    max-width: 300px; /* Limits image size on smaller screens */
    height: auto; /* Maintains aspect ratio */
    transform: translateX(-10%);
   
   
  }
  .s4{
    margin-top: 10%;
    transform: translateX(5%);
  }
  
}
  @media (max-width: 480px) {
  .fancy {
    font-size: 2.2rem;
  }
  }
</style>