  text-align: center;
  box-shadow: 0 4px 8px rgba(0,0,0,0.3);
  transition: transform 0.3s ease;
  overflow: hidden;
  z-index: 1;
}

/* The animated glowing snake */
.project-card::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  width: calc(100% + 40%);
  height: calc(100% + 40%);
  border-radius: 15px;
  background: conic-gradient(
    from 80deg,
    transparent 80deg,
    #ffa13628 90deg,
    transparent 180deg,
    #c46c2462 270deg,
    transparent 360deg
  );
  animation: spin 20s linear infinite;
  z-index: 0;
  filter: blur(200px);
  opacity: 0;
  transition: opacity 0.3s ease-in-out;
}

.project-card:hover::before {
  
  opacity: 1;
}

.project-card:hover{
  
  box-shadow: 10px 10px 16px rgba(0, 0, 0, 0.3);
  transform: translateY(-3%);
}


.project-card > * {
  position: relative;
  z-index: 2;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}


