  }
  
  .navigation a:active {
    box-shadow: inset 40px -90px 0px rgba(255, 174, 0, 0.993);
    transform: scale(1.2);
  }
  
  .favicon {
    filter: invert();
    width: 40px;
    height: 40px;
    margin: 0 1%;
    transition: transform 0.5s ease, opacity 0.3s ease;
  }
  
  .favicon:hover {
    transform: scale(1.1);
    opacity: 0.8;
  }
  
  .dividerN {
    border: none;
    border-top: 2px solid #ffffff;
    margin: 20px 20px;
    width: 100%;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .navigation {
      display: none;
    }
  
