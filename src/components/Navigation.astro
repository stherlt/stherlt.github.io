    }
    
    .mobile-menu {
  display: none; /* Hide by default */
  flex-direction: column;
  align-items: left;
  
  background-color: rgba(255, 0, 119, 0.993);
    color: white;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding-left: 15%;
  padding-top: 0%;
  z-index: 1000;
  justify-content: center;
  transition: all 0.3s ease;
}

.mobile-menu a {
  margin: 10px 0;
 
  font-size: 2.5rem;
  transition: all 0.3s ease;
  color: white;
  text-decoration: none;
  font-weight: bold;
}
    .mobile-menu a:hover {
      
      transform: translateX(1%);
    }
    
  }
  .mobile-menu.slide-in {
   animation: slide 0.3s ease;
 
  }
  @keyframes slide {
  0% {
    
    transform: translateX(10%);
  
  } 
  50% {
    transform: translateX(0%);
  
  } 
  100%{
    font-size: 2.5rem;
  }
}
@keyframes slideout {
  0% {
    transform: translateX(0%);
  
  } 
  50% {
    background-color: rgba(255, 217, 0, 0.993);
    transform: translateX(-100%);
    
  } 
  100%{
    
    transform: translateX(-100%);
  }
}

  .mobile-menu.slide-out {
    animation: slideout .5s ease;
  }
  
  /* Force-hide mobile menu on larger screens */
  @media (min-width: 769px) {
    .mobile-menu {
      display: none !important;
    }
    .hamburger-menu {
      display: none !important;
    }
    .favicon{
      transform: translateX(-50%);
    }
  }
  .title {
