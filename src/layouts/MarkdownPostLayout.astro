---
import '../styles/posts.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';



const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} >
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&family=Rubik+Mono+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css" integrity="sha384-nB0miv6/jRmo5UMMR1wu3Gz6NLsoTkbqJghGIsx//Rlm+ZU03BU6SQNC66uf4l5+" crossorigin="anonymous">

    <!-- The loading of KaTeX is deferred to speed up page rendering -->
    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.js" integrity="sha384-7zkQWkzuo3B5mTepMUcHkMB5jZaolc2xDwL6VFqjFALcbeS9Ggm/Yr2r3Dy4lfFg" crossorigin="anonymous"></script>

    <!-- To automatically render math in text elements, include the auto-render extension: -->
    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/contrib/auto-render.min.js" integrity="sha384-43gviWU0YVjaDtb/GhzOouOXtZMP/7XUzwPTstBeZFe/+rCMvRwr4yROQP43s0Xk" crossorigin="anonymous"
        onload="renderMathInElement(document.body);"></script>
        <script>
          document.addEventListener("DOMContentLoaded", function () {
            renderMathInElement(document.body, {
              delimiters: [
                { left: "$", right: "$", display: false }, // Inline math
                { left: "$$", right: "$$", display: true } // Block math
              ]
            });
          });
        </script>
        
    <title>{frontmatter.title}</title> <!Tab title>
    <script defer src="/src/app/appscroll.js"></script>
    
  </head>
  <body class="animatein">
<Navigation/>
<p class="fancy">{frontmatter.title}</p>
<p>{frontmatter.description}</p>
<hr class="divider">

</section>

    <div class="blogtitle">
        <div class = "blganim"></div>
    </div>
<section class="content-section">
<slot class="fadeblog"></slot>

</section>
<hr class="divider">
  <Footer/>
  </body>
  
</html>

<style>
.content-section {
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.127); /* Subtle shadow */
  padding-top: 3%;
  padding-bottom: 3%;
  color: rgb(0, 0, 0);
  border-radius: 20px;
  background-color: #ececec;
  margin: 0 auto; /* Center the section horizontally */
  padding-left: 15%; 
  padding-right: 15%; /* Optional: Add some padding inside the section */
  box-sizing: border-box; /* Ensure padding doesn't affect the width */
  max-width: 100%;
}




.indexrighttext{
  text-align: center;
  
  
  transform: translateY(10px);
  background-color: 	#e8dcaf;
  border-width: 1.5px;
  
  width: 30%;
  margin-right: auto;
  margin-left: 0;
  border-radius: 4px;
  padding: 1%;
  animation: wiggle 2.5s infinite ease-in-out;
}
@keyframes welcomepulse {
  0% {
    box-shadow: 10px 0px 15px rgba(255, 255, 255, 0.6); /* Right */
  }
  25% {
    box-shadow: 0px 10px 15px rgba(255, 255, 255, 0.6); /* Bottom */
  }
  50% {
    box-shadow: -10px 0px 15px rgba(255, 255, 255, 0.6); /* Left */
  }
  75% {
    box-shadow: 0px -10px 15px rgba(255, 255, 255, 0.6); /* Top */
  }
  100% {
    box-shadow: 10px 0px 15px rgba(255, 255, 255, 0.6); /* Back to Right */
  }
}
@keyframes wiggle {
  0% { transform: rotate(0deg); }
  
  100% { transform: rotate(0deg); }

}

.BACKGROUNDTEXT{
  

  position: absolute;
  color: transparent;
  color: rgb(0, 0, 0);
  z-index: -1;
  font-size: 300%;
  padding-left: 60%;
  transform: translateY(-250px);
  font-family: "Lexend Deca", sans-serif;
  font-optical-sizing: auto;
  font-weight: 780;
  font-style: normal;
}
.BACKGROUNDTEXTABT{
  

  position: absolute;
  color: transparent;
  color: rgb(0, 0, 0);
  z-index: -1;
  font-size: 100%;

  font-family: "Lexend Deca", sans-serif;
  font-optical-sizing: auto;
  font-weight: 780;
  font-style: normal;
}
.LINKBOX {
  font-family: "Lexend Deca", serif;
  font-optical-sizing: auto;
  font-weight: 350;
  display: inline-block;
  padding: 10px 20px;
  font-size: 16px;
  text-align: center;
  text-decoration: none;
  border-style: solid;
  color:rgb(0, 0, 0);
  background-color: rgba(0, 0, 0, 0.034); /* Button background color */
  border-color: #000000;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.5s ease, border-style 0.3s ease-in; /* Smooth transition for hover effect */
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.26); /* Subtle shadow */
}

/* Glow effect on hover */
.LINKBOX:hover {
 

  border-style: dotted;
  box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.377); /* Subtle shadow */
  font-weight: 350;

  background-color: rgba(135, 151, 153, 0);
  transform: scale(1.05); /* Slight zoom-in effect */

  
}
@keyframes welcomepulse {
  0% {
    
    box-shadow:inset 10px 0px 15px rgba(82, 82, 82, 0.6); /* Right */
  }
  25% {
    box-shadow:inset 0px 10px 15px rgba(82, 82, 82, 0.6); /* Bottom */
  }
  50% {
    box-shadow:inset -10px 0px 15px rgba(82, 82, 82, 0.6); /* Left */
  }
  75% {
    box-shadow:inset 0px -10px 15px rgba(82, 82, 82, 0.6); /* Top */
  }
  100% {
    box-shadow:inset 10px 0px 15px rgba(82, 82, 82, 0.6); /* Back to Right */
  }}
  .s4 img {
    margin-left: 10%;
    
    
    transition: box-shadow 0.3s ease, border-radius 0.3s ease;
    width: 550px; /* Adjust the image width as needed */
    height: auto; /* Maintain the aspect ratio of the image */
}
.s4 img:hover {
  box-shadow:  10px 10px 0px rgba(135, 151, 153, 0.993);
  
  border-radius: 10px; /* Optional: rounded corners for the image */
}
h1, h2, h3, h4, h5, h6 {
  font-size: 1.2rem; /* Set to your desired size */
  line-height: 1.5; /* Optional: Adjust line height for better readability */
}
.fancy {
  font-family: "Lexend Deca", sans-serif;
  font-optical-sizing: auto;
  font-weight: 780;
  font-style: normal;
  margin: 1rem 0;
  font-size: 6.5rem;
 
}

@media (max-width: 480px) {
  .content-section {
    padding: 2%;
    margin: 0 5%;
    font-size: 0.4rem;
    border-radius: 5px;
    width: 100%;
    transform: translateX(-5%);
    border-style: solid;
    border-width: 2px;
    border-color: #0000001a;
  }

  .img {
    width: 100%;
    max-width: 300px;
    margin: 10% auto;
    border-style: solid;
    border-width: 2.5px;
    border-radius: 10px;
    border-color: #d6d6d6;
  }

  .fancy {
 
  font-size: 2.2rem;
 
}

  .LINKBOX {
    font-size: 12px;
    padding: 5px 10px;
  }
}
</style>